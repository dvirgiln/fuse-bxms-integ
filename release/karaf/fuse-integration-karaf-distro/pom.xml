<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jboss.integration.fuse</groupId>
        <artifactId>karaf-release-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>fuse-integration-karaf-distro</artifactId>
    <packaging>pom</packaging>

    <name>Fuse Integration: Release: Karaf Distro</name>
    <description>Fuse Integration: Release: Karaf Distro</description>
    
    <properties>
        <staging.dir>${project.build.directory}/jboss-switchyard</staging.dir>
        <staging.jboss.dir>${staging.dir}/jboss-as-${version.org.jboss.as}</staging.jboss.dir>
        <distro.root.dir>/</distro.root.dir>
        <switchyard.jboss.home>${project.build.directory}${distro.root.dir}</switchyard.jboss.home>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-quickstarts</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss.integration.fuse.quickstarts</groupId>
                                    <artifactId>fuse-integration-quickstarts-karaf</artifactId>
                                    <type>zip</type>
                                    <version>${project.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${staging.jboss.dir}/fuse-integration</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>${basedir}/assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
               <plugin>
                   <groupId>org.apache.karaf.tooling</groupId>
                   <artifactId>features-maven-plugin</artifactId>
                   <version>2.4.0</version>
                   <executions>
                       <execution>
                           <id>add-features-to-repo</id>
                           <phase>generate-resources</phase>
                           <goals>
                               <goal>add-features-to-repo</goal>
                           </goals>
                           <configuration>
                               <descriptors>
                                <descriptor>mvn:org.apache.karaf.assemblies.features/spring/${version.org.apache.karaf}/xml/features</descriptor>
                                <descriptor>mvn:org.jboss.integration.fuse/karaf-features/${project.version}/xml/features</descriptor>
                               </descriptors>
                               <features>
                                  <feature version="${project.version}">fuse-bxms-switchyard-bpm</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-rules</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-quickstart-bpm-service</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-quickstart-rules-camel-cbr</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-quickstart-rules-interview</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-quickstart-rules-interview-container</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-quickstart-rules-interview-dtable</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-demo-library</feature>
                                  <feature version="${project.version}">fuse-bxms-switchyard-demo-helpdesk</feature>
                                  <!--feature version="${project.version}">drools5-camel</feature-->
                                  <feature version="${project.version}">drools-decisiontable</feature>
                                  <feature version="${project.version}">drools-jpa</feature>
                                  <feature version="${project.version}">kie</feature>
                                  <feature version="${project.version}">kie-ci</feature>
                                  <feature version="${project.version}">kie-spring</feature>
                                  <feature version="${project.version}">kie-aries-blueprint</feature>
                                  <feature version="${project.version}">kie-camel</feature>
                                  <feature version="${project.version}">jbpm-commons</feature>
                                  <feature version="${project.version}">jbpm-human-task</feature>
                                  <feature version="${project.version}">jbpm</feature>
                                  <feature version="${project.version}">jbpm-example</feature>
                                  <feature version="${project.version}">drools-decision-kie-blueprint-camel-example</feature>
                                  <feature version="${project.version}">drools-decision-table-kie-spring-camel-example</feature>
                                  <feature version="${project.version}">jbpm-spring-persistent</feature>
                                  <feature version="${project.version}">droolsjbpm-hibernate</feature>
                                  <feature version="${project.version}">hibernate-validator</feature>
                                  <feature version="${project.version}">h2</feature>
                               </features>
                               <includeMvnBasedDescriptors>true</includeMvnBasedDescriptors>
                               <repository>target/features-repo</repository>
                           </configuration>
                       </execution>
                   </executions>
                   <dependencies>
                       <dependency>
                           <groupId>org.apache.maven.wagon</groupId>
                           <artifactId>wagon-http</artifactId>
                           <version>2.8</version>
                       </dependency>
                   </dependencies>
               </plugin>

        </plugins>
    </build>
</project>
